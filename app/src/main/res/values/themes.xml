<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearnIntent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fuxia</item>
        <item name="colorPrimaryVariant">@color/limeLemon</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBiege</item>
        <item name="colorSecondaryVariant">@color/sunBirst</item>
        <item name="colorOnSecondary">@color/deepestViolet</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.LearnIntent.DarkSide" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_secondary50</item>
        <item name="android:buttonStyle">@style/Theme.LearnIntent.ButtonOnDesign</item>
    </style>
    <style name="Theme.LearnIntent.ButtonOnDesign" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="round">15dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
    </style>
</resources>